
# for easy debugging of any mistakes set 
# verbose_mode to anything to cause prints to occur
verbose_mode=
unabashed_log_file=
alias if_verbose='[[ ! -z "${verbose_mode}" ]] &&'
function verbose_echo() {
    [[ ! -z "${unabashed_log_file}" ]] && 
                echo $(date +"%D") $@ >> ${unabashed_log_file}
    [[ ! -z "${verbose_mode}" ]] && echo $@ 1>&2
}

function source() {
    if_verbose echo "starting sourcing \"$@\""
    command source $@
    if_verbose echo "finished sourcing \"$@\""
}

source ~/.files/global
unabashed=${unabashed:-~/.files/unabashed}

function load_bash_files() {
    if_verbose echo "sourcing directory \"${source_directory}\""

    for i in `ls ${source_directory}`; do
        source ${source_directory}/$i
    done
}

